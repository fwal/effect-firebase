{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["development"],
    "paths": {
      "@effect-firebase/admin": ["packages/admin/src/index.ts"],
      "@effect-firebase/client": ["packages/client/src/index.ts"],
      "@effect-firebase/core": ["packages/core/src/index.ts"],
      "@effect-firebase/mock": ["packages/mock/src/index.ts"],
      "@effect-firebase/schema": ["packages/schema/src/index.ts"]
    }
  }
}
