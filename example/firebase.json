{
  "functions": 
    {
      "source": "dist/example/backend",
      "codebase": "backend",
      "predeploy": ["nx run @example/backend:build"]
    },
  "hosting": [
    {
      "target": "default",
      "public": "dist/example/app",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ],
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "pubsub": {
      "port": 8085
    },
    "tasks": {
      "port": 9499
    },
    "ui": {
      "enabled": true,
      "port": 4001
    },
    "singleProjectMode": true
  }
}
